<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <com.GuLiSir.progressbar.TextProgressbar
       android:layout_width="200dp"
       android:id="@+id/main_tpb"
       android:background="#0000ff00"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="30dp"
       app:progress_border_color="#1C5B5B"
       app:progress_border_radius="25dp"
       app:progress_color ="#70D4D4"
       app:progress_text_size="15dp"
       app:progress_text_color="#000066"
       app:progress_bg_color="#FFFFFF"
       app:progress_border_width="1dp"
       android:layout_height="50dp" />

   <Button
       android:layout_width="wrap_content"
       android:text="测试"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
       android:layout_below="@id/main_tpb"
       android:onClick="start"
       android:layout_height="wrap_content" />
   <TextView
       android:layout_width="wrap_content"
       android:id="@+id/main_tv"
       android:layout_centerInParent="true"
       android:layout_height="wrap_content" />

</RelativeLayout>