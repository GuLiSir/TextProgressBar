<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.GuLiSir.progressbar.TextProgressbar
        android:id="@+id/main_tpb"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#0000ff00"
        app:progress_bg_color="#FFFFFF"
        app:progress_border_color="#1C5B5B"
        app:progress_border_radius="25dp"
        app:progress_border_width="1dp"
        app:progress_color="#70D4D4"
        app:progress_text_color="#000066"
        app:progress_text_size="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_tpb"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="20dp"
        android:onClick="start"
        android:text="测试" />

    <TextView
        android:id="@+id/main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <com.GuLiSir.progressbar.ProgressStepScrollBar
        android:id="@+id/main_pb"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/main_btn_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="进度" />

</RelativeLayout>